<div class="fileupload fileupload-new" data-provides="fileupload">

	<% if object.send(field).file %>

		<div class="fileupload-new thumbnail">
			<%= image_tag(object.send(field).url) %>
		</div>

	<% else %>

		<div class="fileupload-new thumbnail" style="width: 200px; height: 150px;">
			<img src="<%= asset_path 'my_admin/no_image.gif' %>" />
		</div>

	<% end %>

	<div class="fileupload-preview fileupload-exists thumbnail" style="max-width: 200px; max-height: 150px; line-height: 20px;"></div>
	<div>
		<span class="btn btn-file">
			<span class="fileupload-new">Selecionar Imagem</span>
			<span class="fileupload-exists">Alterar Imagem</span>
			<%= form.file_field field %>
		</span>
		<a href="#" class="btn fileupload-exists" data-dismiss="fileupload">Remover</a>
	</div>
</div>