<% content_for :title do %><%= I18n.t('my_admin.titles.password.edit') %><% end %>

<%= form_for(@user, :url => send("#{admin_prefix}_password_path"), :html => {:class => "form-horizontal form-bordered"}) do |f| %>
  <%= f.error_messages %>
  
  <span class="help-inline">Por favor, informe sua senha antiga, por segurança, e então informe sua nova senha duas vezes para que possamos verificar se você digitou corretamente.</span>

	
	<div class="row-fluid">	
		<div class="span12">
			<div class="box box-bordered">

				<div class="box-title">
					<h3><i class="icon-key"></i>Senha</h3>
				</div>
				<div class="box-content nopadding">

			    <div class="control-group">
			      <%= f.label :old_password, :class => "control-label" %>
			      <div class="controls">
							<div class="input-append">
			        	<%= f.password_field :old_password %>
								<span class="add-on"><i class="icon-key"></i></span>
							</div>
			      </div>
			    </div>
			    <div class="control-group">
			      <%= f.label :password, :class => "control-label" %>
			      <div class="controls">
							<div class="input-append">
			        	<%= f.password_field :password %>
								<span class="add-on"><i class="icon-key"></i></span>
							</div>
			      </div>
			    </div>
			    <div class="control-group">
			      <%= f.label :password_confirmation, :class => "control-label" %>
			      <div class="controls">
							<div class="input-append">
			        	<%= f.password_field :password_confirmation %>
								<span class="add-on"><i class="icon-key"></i></span>
							</div>
			      </div>
			    </div>
			
				</div>

  
			  <div class="form-actions">
			    <%= f.submit I18n.t('my_admin.labels.models.edit'), :class => "btn btn-success" %> 
			    <%= link_to("Cancelar", send("#{admin_prefix}_root_path"), :class => "btn") %> 
			  </div>

			</div>
		</div>
	</div>
  
<% end %>